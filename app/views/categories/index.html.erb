<p id="notice"><%= notice %></p>

<h1>カテゴリからお店を探そう！</h1>

<div class="recommend-shop">
  <%= link_to shop_list_categories_path, class: "btn-gradient-radius-orange" do%>
  全てのお店のリストはこちら&nbsp;<i class="fas fa-chevron-circle-right"></i>
  <% end %>
</div>

<div class="search">
  <%= render partial: "categories/select", locals: {categories: @category_all} %>
</div>
<div class="category-list">
  <% @category_all.each do |category| %><%# カテゴリーを全てeach %>
    <div class="category-item">
      <%= link_to image_tag(category.image_category, :size => '280x200'), like_lunch_category_path(category), class: "image-menu" %>
      <div class="category-shop-btn">
        <%= link_to "#{category.name}", like_lunch_category_path(category) %>
      </div>
    </div>
  <% end %>
</div>
