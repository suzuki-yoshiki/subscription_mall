<% provide(:title, "サブスク審査申し込み") %>

<h1>加盟店サブスクショップ審査</h1>

<%= form_with(model: @subscription, url: subscription_confirm_path(@subscription, owner_id: current_owner.id), method: :post, local: true) do |form| %>
  <%= render 'shared/error_messages' , object: @subscription %>
    <%= form.hidden_field :food_loss, :value => @subscription.food_loss %>
  <div class="field">
    <%= form.label :お店の名前 %> <span class="must">必須</span><br/>
    <%= form.text_field :name, :required => true, id: :subscription_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :サイトURL %> <span class="must">必須</span><br/>
    <%= form.text_field :site, :required => true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label "フードロスにご協力していただけますか？" %><br>
    <%= form.select :food_loss, [['いいえ', false],['はい', true]], { selected: @subscription.food_loss }, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= form.submit "加盟店登録の審査申請" %>
  </div>
<% end %>
<%= link_to 'トップ', root_path %> |

<%= link_to '一覧へ', owner_subscriptions_path(current_owner) %>